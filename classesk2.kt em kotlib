//criação Classe carro cpm marca,modelo e ano
class Carro {
  var marca=""
  var modelo=""
  var ano=0
} 
//outro maneira de construir uma classe
class Car(var modelo: String,var marca: String, var ano: Int){
  // metodo da classe
  fun ligar() {
    println("Wrooom!")
  }
}

//função principal
fun main() {

  //criar instancia de carro 
  var corola=Carro()
  
  //atrbuir valores
  corola.marca="Toyota"
  corola.modelo="Corola"
  corola.ano=2023

  //imprimir atributos 
  println(corola.marca)
  println(corola.modelo)
  println(corola.ano)

  //instanciar passando os parametros 
  val c1 = Car("F1000", "Ford", 1980)
  println (c1.marca)
  //instanciar outro carro
  val fusca=Car ("Fusca", "VW", 1945)
  println(fusca.modelo)
}
